<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Vitalii Ivanov" id="Create-table-groups">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="groups"/>
            </not>
        </preConditions>

        <createTable tableName="groups">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" />
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

<!--        <addUniqueConstraint tableName="groups" columnNames="name"/>-->

    </changeSet>

    <changeSet author="Vitalii Ivanov" id="Create-table-students">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="students"/>
            </not>
        </preConditions>
        <createTable tableName="students">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="patronymic" type="varchar(255)"/>
            <column name="group_id" type="bigint">
                <constraints foreignKeyName="students_groups_id_fk"
                             references="groups(id)"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>